# Application Settings
PROJECT_NAME="Baymax AI Patient Intake EMR"
VERSION="0.1.0"
API_V1_STR="/api/v1"
PRODUCTION=false
DEBUG=true

# Security
SECRET_KEY="your-secret-key-here-generate-with-openssl-rand-hex-32"
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL="postgresql+asyncpg://baymax:baymax@localhost:5432/baymax"
POSTGRES_SERVER="localhost"
POSTGRES_USER="baymax"
POSTGRES_PASSWORD="baymax"
POSTGRES_DB="baymax"
POSTGRES_PORT=5432

# Redis
REDIS_URL="redis://localhost:6379/0"

# AWS Configuration
AWS_REGION="ap-south-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
S3_BUCKET_NAME="baymax-patient-data"

# DynamoDB Tables
DYNAMODB_CONVERSATIONS_TABLE="baymax-conversations"
DYNAMODB_SESSIONS_TABLE="baymax-sessions"
DYNAMODB_APPOINTMENTS_TABLE="baymax-appointments"
DYNAMODB_AUDIT_TABLE="baymax-audit"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"

# AWS Bedrock (Optional)
AWS_BEDROCK_ENABLED=false
AWS_BEDROCK_MODEL="anthropic.claude-instant-v1"

# Twilio Configuration
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+911234567890"

# AWS SES Configuration
AWS_SES_REGION="ap-south-1"
AWS_SES_FROM_EMAIL="noreply@baymax.health"

# Zoom Configuration
ZOOM_API_KEY="your-zoom-api-key"
ZOOM_API_SECRET="your-zoom-api-secret"

# Sentry (Optional)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Monitoring
PROMETHEUS_ENABLED=true

# File Upload Settings
MAX_FILE_SIZE_MB=15
MAX_FILES_PER_UPLOAD=10

# Intake Settings
INTAKE_MAX_TURNS=50
INTAKE_TIMEOUT_MINUTES=30

# Red Flag Settings
RED_FLAG_ESCALATION_ENABLED=true

# Encryption
ENCRYPTION_KEY="your-encryption-key-generate-with-fernet"

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Allowed Hosts
ALLOWED_HOSTS="*"